
<div class="container py-5" style="background-color: #f9f9f9;">
  <div class="card p-4" style="max-width: 600px; margin: 0 auto; background-color: #fff; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);">
    <h2 class="text-center mb-4" style="color: #333; font-family: Arial, sans-serif; font-size: 2rem;"><%= @pet.name %></h2>
    <div class="text-center mb-4">
      <img src="https://source.unsplash.com/400x300/?pets" alt="Pet Image" style="border-radius: 10px;">
    </div>
    <p class="mb-2" style="color: #555;">🐾 Species: <%= @pet.species %></p>
    <p class="mb-2" style="color: #555;">📍 Address: <%= @pet.address %></p>
    <p class="mb-4" style="color: #555;">Found <%= @pet.found_days_ago %></p>

    <div class="text-center">
      <%= link_to 'Edit', edit_pet_path(@pet), class: "btn btn-primary mr-2" %>
      <%= link_to 'Back', pets_path, class: "btn btn-secondary mr-2" %>
      <%= link_to "Delete", pet_path(@pet), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
    </div>
  </div>
</div>
